{
  "name": "mundial-tv",
  "version": "1.0.0",
  "description": "Always on top tv",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "dist32": "build --win --ia32",
    "distAll": "build --mac --win --ia32"
  },
  "build": {
    "appId": "com.negro.mundialtv",
    "productName": "Mundial TV",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable"
    }
  },
  "author": "Negro",
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.15.1"
  }
}
